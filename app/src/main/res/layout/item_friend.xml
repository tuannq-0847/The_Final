<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageFriends"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_80dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFriends"
        app:layout_constraintLeft_toRightOf="@+id/imageFriends"
        app:layout_constraintTop_toTopOf="@+id/imageFriends" />
</androidx.constraintlayout.widget.ConstraintLayout>