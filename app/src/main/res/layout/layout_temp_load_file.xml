<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8dp">

    <TextView
        android:id="@+id/imageTemp"
        android:layout_width="@dimen/_144dp"
        android:layout_height="@dimen/_36dp"
        android:background="@drawable/bg_image_send"
        android:drawableStart="@drawable/ic_file"
        android:drawablePadding="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.karl.last_chat.widget.RotateView
        android:layout_width="@dimen/_24dp"
        android:layout_height="@dimen/_24dp"
        android:src="@drawable/ic_loading"
        app:layout_constraintBottom_toBottomOf="@id/imageTemp"
        app:layout_constraintEnd_toEndOf="@id/imageTemp"
        app:layout_constraintStart_toStartOf="@id/imageTemp"
        app:layout_constraintTop_toTopOf="@id/imageTemp" />

</androidx.constraintlayout.widget.ConstraintLayout>